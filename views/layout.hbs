                    <li class="nav-item"><a class="nav-link" href="/users/logout">Odjava</a></li>
                    {{else}}
                    <li class="nav-item"><a class="nav-link" href="/users/login">Prijava</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/register">Registracija</a></li>
